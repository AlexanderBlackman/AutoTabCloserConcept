{
    "manifest_version": 2,
    "name": "Tab Auto-Close Extension",
    "version": "1.0",
    "description": "Automatically closes the previous tab when navigating to a new one if the extension is enabled.",

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "browser_action": {
       "default_popup": "popup.html",
       "default_icon": {
           "16": "icon16.png",
           "48": "icon48.png",
           "128": "icon128.png"
       }
    },
    "permissions": ["tabs", "storage"]
}
